{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "react",
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
